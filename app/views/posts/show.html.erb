<section class="header">
  <div class="container">
    <div class="header-titel"><h1><strong><%= @post.title %></strong></h1></div>
    <p class="author-header"><strong>Author:</strong> <%= @post.name %></p>
  </div>
</section>
<div class="container">

<%= image_tag(@post.image, width: "200", class: "img-fluid py-5") if @post.image.present? %>

<p>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn btn-info"  %>
<%= link_to 'Back', posts_path, class: "btn btn btn-info"  %>
</div>
<p id="notice"><%= notice %></p>